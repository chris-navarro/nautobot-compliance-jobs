{
  "control_framework": {
    "version": "2.0",
    "last_updated": "2026-02-12",
    "controls": [
      {
        "control_id": "C-01",
        "name": "NTP Configuration",
        "description": "NTP servers must be configured",
        "regex": "ntp server (?:\\d{1,3}\\.){3}\\d{1,3}",
        "severity": "high",
        "weight": 10,
        "platforms": ["cisco_ios", "arista_eos", "juniper_junos"]
      },
      {
        "control_id": "C-02",
        "name": "Logging Server",
        "description": "Syslog server must be configured",
        "regex": "logging host (?:\\d{1,3}\\.){3}\\d{1,3}",
        "severity": "high",
        "weight": 10,
        "platforms": ["cisco_ios", "arista_eos"]
      },
      {
        "control_id": "C-03",
        "name": "SSH Only",
        "description": "No telnet access permitted",
        "regex": "^(?!.*transport input telnet).*$",
        "severity": "critical",
        "weight": 15,
        "platforms": ["cisco_ios", "arista_eos"]
      },
      {
        "control_id": "C-04",
        "name": "AAA Enabled",
        "description": "AAA authentication must be configured",
        "regex": "aaa new-model",
        "severity": "critical",
        "weight": 15,
        "platforms": ["cisco_ios"]
      },
      {
        "control_id": "C-05",
        "name": "SNMPv3 Only",
        "description": "No SNMP public/private communities",
        "regex": "^(?!.*snmp-server community).*$",
        "severity": "high",
        "weight": 12,
        "platforms": ["cisco_ios", "arista_eos"]
      },
      {
        "control_id": "C-06",
        "name": "BGP MD5",
        "description": "BGP neighbor passwords configured",
        "regex": "neighbor .+ password",
        "severity": "medium",
        "weight": 8,
        "platforms": ["cisco_ios", "juniper_junos"]
      },
      {
        "control_id": "C-07",
        "name": "Loopback0",
        "description": "Loopback0 interface must exist",
        "regex": "interface Loopback0",
        "severity": "medium",
        "weight": 5,
        "platforms": ["cisco_ios", "arista_eos", "juniper_junos"]
      },
      {
        "control_id": "C-08",
        "name": "Syslog Buffer",
        "description": "Syslog buffer size must be 64000+",
        "regex": "logging buffered (?:[6-9][4-9][0-9]{2}|[7-9][0-9]{3,})",
        "severity": "low",
        "weight": 3,
        "platforms": ["cisco_ios"]
      },
      {
        "control_id": "C-09",
        "name": "Banner",
        "description": "Legal banner must be configured",
        "regex": "banner (?:login|motd|exec)",
        "severity": "low",
        "weight": 2,
        "platforms": ["cisco_ios", "arista_eos", "juniper_junos"]
      },
      {
        "control_id": "C-10",
        "name": "DNS Servers",
        "description": "DNS servers must be configured",
        "regex": "ip name-server (?:\\d{1,3}\\.){3}\\d{1,3}",
        "severity": "medium",
        "weight": 10,
        "platforms": ["cisco_ios", "arista_eos", "juniper_junos"]
      }
    ]
  }
}